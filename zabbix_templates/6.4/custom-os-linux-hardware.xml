            <uuid>6d4e9146f1a54f1f8fd275578a01784b</uuid>
            <template>Custom - OS - Linux - Hardware</template>
            <name>Custom - OS - Linux - Hardware</name>
            <description>Monitor important linux parameters</description>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
